<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:buttonStyle">@style/Button</item>
        <item name="android:listViewStyle">@style/ListView</item>
        <item name="android:textViewStyle">@style/TextView</item>
    </style>

    <style name="View">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Layout" parent="View">
        <item name="android:background">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">@dimen/space_large</item>
        <item name="android:layout_marginTop">@dimen/space_large</item>
        <item name="android:layout_marginBottom">@dimen/space_large</item>
        <item name="android:layout_marginRight">@dimen/space_large</item>
    </style>

    <style name="LinearLayout" parent="Layout">
        <item name="android:orientation">horizontal</item>
    </style>


    <style name="ImageView" parent="View">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_marginLeft">@dimen/space_small</item>
        <item name="android:layout_marginRight">@dimen/space_small</item>
        <item name="android:layout_marginTop">@dimen/space_small</item>
        <item name="android:layout_marginBottom">@dimen/space_small</item>
    </style>

    <style name="Button" parent="View"></style>

    <style name="ListView" parent="View"></style>

    <style name="TextView" parent="View">
        <item name="android:paddingLeft">@dimen/space_small</item>
        <item name="android:paddingRight">@dimen/space_small</item>
        <item name="android:paddingBottom">@dimen/space_small</item>
        <item name="android:paddingTop">@dimen/space_small</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:gravity">start|center_vertical</item>
    </style>

    <style name="homtItemTextViewLabel" parent="TextView">
        <item name="android:textSize">@dimen/home_item_tvlabel_size</item>
        <item name="android:textColor">@color/select_bar_textview</item>
        <item name="android:layout_width">@dimen/margin_0</item>
    </style>

    <style name="homtItemTextViewTitle" parent="TextView">
        <item name="android:textSize">@dimen/home_item_tvtitle_size</item>
    </style>

    <style name="SearchEditText" parent="TextView">
        <item name="android:textColor">@color/select_bar_textview</item>
        <item name="android:textSize">@dimen/search_et_size</item>
    </style>

    <style name="navRButton" parent="Button">
        <item name="android:layout_width">@dimen/margin_0</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/nav_tv</item>
        <item name="android:padding">@dimen/space_small</item>
        <item name="android:button">@null</item>
    </style>

    <style name="RatingBar" parent="android:Widget.RatingBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:progressDrawable">@drawable/rating_bar_selector</item>
        <item name="android:indeterminateDrawable">@drawable/rating_bar_selector</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:thumb">@null</item>
        <item name="android:minHeight">18dp</item>
        <item name="android:maxHeight">18dp</item>
        <item name="android:rating">5</item>
        <item name="android:numStars">5</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style></resources>
